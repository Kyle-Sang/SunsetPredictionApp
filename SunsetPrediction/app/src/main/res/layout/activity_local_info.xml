<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:id="@+id/map">

    <ImageView
        android:id="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sunset_logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sunset"
        android:text="curr location" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temperature"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weather main"
        android:textSize="18dp"
        android:layout_below="@id/temperature"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/sunset_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun sets at sys sunset"
        android:textSize="18dp"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/prediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our prediction tonight"
        android:textSize="18dp"
        android:layout_below="@id/sunset_time"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prediction"
        android:isIndicator="true"
        android:theme="@style/RatingBar"/>

    <Button
        android:id="@+id/rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:layout_below="@id/rating"
        android:onClick="nextScreen"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>

    <!--Width and height changed from wrapcontent-->
    <AnalogClock
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/clock"
        android:dial="@drawable/dial"
        android:hand_hour="@drawable/hour_hand"
        android:hand_minute="@drawable/min_hand"
        android:layout_below="@id/rate_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_below="@id/clock"
        android:onClick="returnToMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>